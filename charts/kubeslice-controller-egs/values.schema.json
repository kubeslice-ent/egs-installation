{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Values schema for Kubeslice Helm chart",
  "type": "object",
  "properties": {
    "kubeslice": {
      "type": "object",
      "properties": {
        "rbacproxy": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "controller": {
          "type": "object",
          "properties": {
            "logLevel": {
              "type": "string",
              "minLength": 1
            },
            "rbacResourcePrefix": {
              "type": "string"
            },
            "projectnsPrefix": {
              "type": "string"
            },
            "endpoint": {
              "type": "string"
            },
            "image": {
              "type": "string",
              "minLength": 1
            },
            "tag": {
              "type": "string",
              "minLength": 1
            },
            "pullPolicy": {
              "type": "string",
              "pattern": "^(Always|Never|IfNotPresent)$",
              "minLength": 1
            }
          },
          "required": ["image","tag","pullPolicy","logLevel"]
        },
        "ovpnJob": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            }
          }
        },
        "prometheus": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "url": {
              "type": "string"
            }
          },
          "if": {
            "properties": {
              "enabled": {
                "const": true
              }
            }
          },
          "then": {
            "required": ["url"]
          }
        },
        "license": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["kubeslice-trial-license", "kubeslice-vcpu-license"]
            },
            "mode": {
              "type": "string",
              "enum": ["auto", "manual","air-gap"]
            },
            "customerName": {
              "type": "string",
              "description": "Name of the customer"
            }
          }
        }
      }
    },
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string"
        },
        "profile": {
          "type": "object",
          "properties": {
            "openshift": {
              "type": "boolean"
            }
          },
          "required": ["openshift"],
          "errorMessage": {
            "required": {
              "openshift": "The 'openshift' field must be specified as true or false."
            }
          }
        },
        "kubeTally": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "existingSecret": {
              "type": "boolean",
              "default": false
            },
            "postgresSecretName": {
              "type": "string"
            },
            "postgresAddr": {
              "type": ["string", "null"]
            },
            "postgresPort": {
              "type": ["integer","null"]
            },
            "postgresUser": {
              "type": ["string", "null"]
            },
            "postgresPassword": {
              "type": ["string", "null"]
            },
            "postgresDB": {
              "type": ["string", "null"]
            },
            "postgresSslmode": {
              "type": ["string", "null"]
            },
            "priceUpdaterWorkers": {
              "type": ["integer"],
              "default": 5
            }
          },
          "required": ["enabled"],
          "dependencies": {
            "enabled": {
              "oneOf": [
                {
                  "properties": {
                    "enabled": {
                      "enum": [false]
                    }
                  }
                },
                {
                  "properties": {
                    "enabled": {
                      "enum": [true]
                    },
                    "existingSecret": {
                      "enum": [true]
                    }
                  },
                  "required": ["postgresSecretName"]
                },
                {
                  "properties": {
                    "enabled": {
                      "enum": [true]
                    },
                    "existingSecret": {
                      "enum": [false]
                    },
                    "postgresAddr": {
                      "type": "string"
                    },
                    "postgresPort": {
                      "type": "integer"
                    },
                    "postgresUser": {
                      "type": "string"
                    },
                    "postgresPassword": {
                      "type": "string"
                    },
                    "postgresDB": {
                      "type": "string"
                    }
                  },
                  "required": ["postgresAddr","postgresPort", "postgresUser", "postgresPassword", "postgresDB"]
                }
              ]
            }
          },
          "errorMessage": {
            "required": {
              "enabled": "The 'enabled' field must be specified as true or false.",
              "postgresSecretName": "The 'postgresSecretName' field is required when kubetally is enabled.",
              "postgresAddr": "The 'postgresAddr' field is required when kubetally is enabled and existingSecret is false.",
              "postgresUser": "The 'postgresUser' field is required when kubetally is enabled and existingSecret is false.",
              "postgresPassword": "The 'postgresPassword' field is required when kubetally is enabled and existingSecret is false.",
              "postgresDB": "The 'postgresDB' field is required when kubetally is enabled and existingSecret is false."
            },
            "dependencies": {
              "enabled": "If kubetally is enabled, either provide connection details (existingSecret: false) or use pre-created secret (existingSecret: true)."
            },
            "oneOf": "You must choose either enabled or disabled for kubetally."
          }
        }
      },
      "required": ["profile", "kubeTally"],
      "errorMessage": "The 'global' object must include 'imageRegistry', 'profile', and 'kubetally' properties."
    }
  }
}